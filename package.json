{
  "name": "unofficial-tasker-companion",
  "version": "2025.06.022",
  "description": "An Electron application with Vue and TypeScript",
  "main": "./out/main/index.js",
  "author": "example.com",
  "homepage": "https://electron-vite.org",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts,.vue --fix",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "vue-tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "start": "electron-vite preview",
    "dev": "npm install --no-save sass-embedded-win32-x64 && npm install --no-save @rollup/rollup-win32-x64-msvc && electron-vite dev",
    "dev:no-win": "electron-vite dev --no-win",
    "build": "npm run typecheck && electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "build:unpack": "npm run build && electron-builder --dir",
    "build:win": "npm install --no-save sass-embedded-win32-x64 && npm install --no-save @rollup/rollup-win32-x64-msvc && npm run build && electron-builder --win",
    "build:mac": "npm run build && electron-builder --mac",
    "build:linux": "npm run build && electron-builder --linux"
  },
  "dependencies": {
    "@brittonhayes/homeassistant-ts": "^0.1.20",
    "@electron-toolkit/preload": "^3.0.0",
    "@electron-toolkit/utils": "^3.0.0",
    "@mdi/font": "^7.4.47",
    "@types/bootstrap": "^5.2.10",
    "@vueform/vueform": "^1.12.7",
    "bootstrap": "^5.3.3",
    "copy-paste": "^1.5.3",
    "electron-updater": "^6.1.7",
    "lodash": "^4.17.21",
    "microtime": "^3.1.1",
    "openapi-typescript-fetch": "^2.2.0",
    "pinia": "^3.0.1",
    "randomstring": "^1.3.1",
    "vue-router": "^4.5.0",
    "vue3-dropzone": "^2.2.1",
    "vuedraggable": "^4.1.0",
    "yup": "^1.6.1"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config": "^1.0.2",
    "@electron-toolkit/eslint-config-ts": "^2.0.0",
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@rushstack/eslint-patch": "^1.10.3",
    "@types/copy-paste": "^1.1.33",
    "@types/lodash": "^4.17.15",
    "@types/microtime": "^2.1.2",
    "@types/node": "^20.14.8",
    "@vitejs/plugin-vue": "^5.0.5",
    "@vue/eslint-config-prettier": "^9.0.0",
    "@vue/eslint-config-typescript": "^13.0.0",
    "electron": "^31.0.2",
    "electron-builder": "^24.13.3",
    "electron-vite": "^2.3.0",
    "eslint": "^8.57.0",
    "eslint-plugin-vue": "^9.26.0",
    "prettier": "^3.3.2",
    "sass-embedded": "^1.85.0",
    "typescript": "^5.5.2",
    "vite": "^5.3.1",
    "vue": "^3.4.30",
    "vue-tsc": "^2.0.22"
  }
}
